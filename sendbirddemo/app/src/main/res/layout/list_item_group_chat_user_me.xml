<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingEnd="8dp"
        android:focusable="true">

        <View
            android:id="@+id/view_group_chat_padding"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_alignParentTop="true" />

        <include
            android:id="@+id/mLayoutChatInfo"
            layout="@layout/partial_group_chat_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_group_chat_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mLayoutChatInfo">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:cardBackgroundColor="@color/groupChatBubbleMe"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:id="@+id/mLayoutChatContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChatMessage"
                        android:paddingTop="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="16sp"
                        android:text="Hi, how are you today?"
                        android:textColor="@color/groupChatTextMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="260dp" />

                    <TextView
                        android:id="@+id/tvEdited"
                        android:text="(edited)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#d8ceff"
                        android:visibility="gone"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_gravity="right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <LinearLayout
                        android:id="@+id/mLayoutUrlPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:maxWidth="260dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvUrlPreviewSiteName"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:text="\@Reddit"
                            android:textColor="@color/groupChatTextMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="260dp" />

                        <TextView
                            android:id="@+id/tvUrlPreviewTitle"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="16sp"
                            android:text="Title will be here."
                            android:textColor="@color/groupChatTextMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="260dp" />

                        <TextView
                            android:id="@+id/tvUrlPreviewDescription"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="4dp"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:text="Description will be here. Blah Blah WWW Blah Wl Blah W WW WW ABCD EFG WW WW WW W Third Line. WWW Z XCVB QWER"
                            android:textColor="@color/groupChatTextMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="260dp" />

                        <ImageView
                            android:id="@+id/imgUrlPreviewMain"
                            android:maxWidth="260dp"
                            android:layout_width="match_parent"
                            android:layout_height="148dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvChatTime"
                android:textSize="10dp"
                android:text="21:27"
                android:textColor="#8e8e8e"
                android:layout_toLeftOf="@id/cvChatMessage"
                android:layout_alignBottom="@id/cvChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <com.example.sendbirddemo.widget.MessageStatusView
                android:id="@+id/mLayoutMessageStatus"
                android:layout_above="@id/tvChatTime"
                android:layout_alignEnd="@id/tvChatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
</layout>