<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <include
            android:id="@+id/mLayoutChatInfo"
            layout="@layout/partial_group_chat_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mLayoutChatInfo">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imgChatFileThumbnail"
                    android:layout_width="228dp"
                    android:layout_height="148dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <SurfaceView
                    android:id="@+id/imgSurfaceVideo"
                    android:layout_width="228dp"
                    android:layout_height="148dp"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="228dp"
                    android:layout_height="148dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_play" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvChatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cvChatMessage"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@id/cvChatMessage"
                android:text="21:27"
                android:textColor="#8e8e8e"
                android:textSize="10dp" />

            <com.example.sendbirddemo.widget.MessageStatusView
                android:id="@+id/mLayoutMessageStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvChatTime"
                android:layout_alignEnd="@id/tvChatTime" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
